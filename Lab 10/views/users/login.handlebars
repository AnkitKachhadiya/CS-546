<h1>Login</h1>

<main>
    <form action="/login" method="post" id="login-form">

        <div class="form-group">
            <label for="username">Username<span>*</span></label>
            <input
                type="text"
                name="username"
                id="username"
                autocomplete="off"
                class="form-control"
                placeholder="Enter username"
                value="{{username}}"
                required="required"
            />
        </div>

        <div class="form-group">
            <label for="password">Password<span>*</span></label>
            <input
                type="password"
                name="password"
                id="password"
                autocomplete="off"
                class="form-control"
                placeholder="Enter password"
                value="{{password}}"
                required="required"
            />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        Or
        <a href="/signup" class="link-primary">Need to register? Click here to
            sign-up</a>

        {{#if error}}
            <p id="error">{{error}}</p>
        {{/if}}
    </form>
</main>